@using Microsoft.AspNetCore.Mvc.Rendering
@using Microsoft.AspNetCore.Mvc.Routing

@model MemoryCore.Models.LoginModel

@{
    Layout = "_Layout";
    ViewBag.Title = "Login - Memory";
}

@using (Html.BeginForm("Login", "Home", FormMethod.Post))
{

    <fieldset>
        <legend>Login</legend>
        <div class="editor-label">
            @Html.LabelFor(a => a.Identifier)
        </div>
        <div class="editor-field">
            @Html.EditorFor(a => a.Identifier)
            @Html.ValidationMessageFor(a => a.Identifier)
        </div>

        <div class="editor-label">
            @Html.LabelFor(a => a.Password)
        </div>
        <div class="editor-field">
            @Html.EditorFor(a => a.Password)
            @Html.ValidationMessageFor(a => a.Password)
        </div>

        <div class="editor-label">
            @Html.LabelFor(a => a.Remember)
        </div>
        <div class="editor-field">
            @Html.EditorFor(a => a.Remember)
            @Html.ValidationMessageFor(a => a.Remember)
        </div>
        <p>
            <a class="btn" href="@Url.Action("Register")">Register</a>
            <input type="submit" value="Login" />
        </p>
    </fieldset>
}